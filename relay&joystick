#define STOP    digitalWrite(relay1, HIGH);\
                digitalWrite(relay2, HIGH)
#define FORWARD digitalWrite(relay1, LOW);\
                digitalWrite(relay2, LOW)
#define LEFT    digitalWrite(relay1, HIGH);\
                digitalWrite(relay2, LOW)
#define RIGHT   digitalWrite(relay1, LOW);\
                digitalWrite(relay2, HIGH)

int relay1  = 0,
    relay2  = 1;

void setup () {
    pinMode(relay1, OUTPUT);
    pinMode(relay2, OUTPUT);
}

void loop () {
  
  int UD = analogRead (A2);
  int LR = analogRead (A1);
  
  Serial.print(UD);
  Serial.print("\t");
  Serial.print(LR);
  Serial.print("\t");
  
  
  if (UD< 60) {
    Serial.print ("forward");
    FORWARD;
    //both wheels on 
  }
 
  else if (LR>1000) {
    Serial.print ("left");
    //right wheel on left wheel off
    RIGHT;
  }
  else if (LR<60) {
    Serial.print ("right");
    //left wheel on right wheel off 
    LEFT;
  }
  else {
    Serial.print("stop");
    //both wheels off 
    STOP;
  }
  Serial.println("");
}
